<!-- we want layout so will write layout("path(after view directory, as already specified)")-->
<% layout("layouts/boilerplate") %>
    <!-- are component are passed in the layout page as components -->

    <body>
        <h1>All Listings</h1>
        <!-- <form method="get" action="/listings/new">
        <button>Add new listing</button>
    </form> -->

        <div class="row row-cols-lg-3 row-col-md-2 row-cols-sm-1">
            <% for(let listing of listings){ %>
                <a href="/listings/<%=listing._id%>">
                    <div class="card col" >
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing" style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b>
                                <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>


    </body>