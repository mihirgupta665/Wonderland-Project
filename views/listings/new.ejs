<% layout("layouts/boilerplate") %>
<body>
    <h2>Create new New Listing : </h2>
    <form method="post" action="/listings">
        <div>
            <label for="title" class="form-label">Title : </label>
            <input type="text" placeholder="Enter the Title" name="listing[title]" class="form-control">
        </div>
        <div>
            <label for="description" class="form-label">Description : </label>
            <textarea placeholder="Enter the Description" name="listing[description]" class="form-control"></textarea>
        </div>
        <div>
            <label for="image.url" class="form-label">Image Link : </label>
            <input type="text" placeholder="Enter the Image URL" name="listing[image][url]" class="form-control">
        </div>   
        <div>
            <label for="price" class="form-label">Price : </label>
            <input type="number" placeholder="Enter the Price" name="listing[price]" class="form-control">
        </div>
        <div>
            <label for="location" class="form-label">Location : </label>
            <input type="text" placeholder="Enter the Location" name="listing[location]" class="form-control">
        </div>
        <div>
            <label for="country" class="form-label">Country : </label>
            <input type="text" placeholder="Enter the Country" name="listing[country]" class="form-control">
        </div>
        <br>
        <br>
        <button>Save</button>
    </form>
</body>
