<% layout("layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Editing Listing : </h2>
                <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title : </label>
                        <input type="text" value="<%=listing.title%>" name="listing[title]" class="form-control" required>
                        <div class="valid-feedback">Title Looks Cool!</div>
                        <div class="invalid-feedback">Please Enter a Valid Title</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description : </label>
                        <textarea name="listing[description]"
                            class="form-control" required> <%= listing.description %> </textarea>
                        <div class="valid-feedback">Description Looks Fine!</div>
                        <div class="invalid-feedback">Please Enter a valid Description</div>
                    </div>
                    <div class="mb-3">
                        Original Listing Image : 
                        <br>
                        <img src="<%= originalImageUrl %>" alt="Listing Image">
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload New Image : </label>
                        <input type="file"  name="listing[image][url]"
                            class="form-control" >
                        <div class="valid-feedback">Image Looks Good!</div>
                        <div class="invalid-feedback">Please Upload a valid Image File</div>
                    </div>
                    <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price : </label>
                        <input type="number" value="<%=listing.price%>" name="listing[price]" class="form-control" required>
                        <div class="valid-feedback">Price Looks Good!</div>
                        <div class="invalid-feedback">Invalid Price!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location : </label>
                        <input type="text" value="<%=listing.location%>" name="listing[location]" class="form-control" required>
                        <div class="valid-feedback">Location Looks Good!</div>
                        <div class="invalid-feedback">Invalid Location!</div>
                    </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country : </label>
                        <input type="text" value="<%=listing.country%>" name="listing[country]" class="form-control" required>
                        <div class="valid-feedback">Country Looks Great!</div>
                        <div class="invalid-feedback">Please Enter a Existing Country Name</div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Update</button>
                </form>
                <br>
            </div>
        </div>
    </body>