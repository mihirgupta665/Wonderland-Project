<!-- local variable are array which contains value so empty array always exist, thus check for their length -->
<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-8 mt-2" role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 mt-2" role="alert">
        <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>